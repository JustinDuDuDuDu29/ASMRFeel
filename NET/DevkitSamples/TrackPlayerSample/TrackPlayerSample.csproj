  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Datafeel" Version="2.1.0-alpha" />
    <PackageReference Include="Datafeel.NET.BLE" Version="2.1.0-alpha" />
    <PackageReference Include="Datafeel.NET.Serial" Version="2.1.0-alpha" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Tracks\led-track.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Tracks\my-track.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Tracks\vibe-track.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
